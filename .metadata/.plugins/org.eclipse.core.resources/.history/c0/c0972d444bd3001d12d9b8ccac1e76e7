package visualizacao;

import javax.swing.JOptionPane;
import javax.swing.JComboBox;

public class EntradaSaida {

	public static int solicitaOpcao() {

		String[] opcoes = { "1 - Depositar", "2 - Sacar", "3 - Saldo", "4 - Dados da Conta", "5 - Extrato",
				"6 - Extrato de Depósitos", "7 - Extrato de Saques" };

		JComboBox<String> menu = new JComboBox<String>(opcoes);

		JOptionPane.showConfirmDialog(null, menu, "Selecione a opção desejada", JOptionPane.OK_CANCEL_OPTION);

		return menu.getSelectedIndex();
	}

	public static double solicitarInformacoesDeposito() {
		return Double.parseDouble(JOptionPane.showInputDialog("Informe quanto deseja depositar"));
	}

	public static String solicitarTitular() {
		return JOptionPane.showInputDialog("Informe o nome do Titular da Conta:");
	}

	public static String solicitarData() {
		return JOptionPane.showInputDialog("Informe a data da Movimentação");
	}

	public static int solicitarTipoDeConta() {

		return Integer.parseInt(
				JOptionPane.showInputDialog("Informe o tipo de conta \n 1 - Conta Poupança \n 2 - Conta Corrente"));
	}

	public static double solicitarInformacoesSaque() {
		return Double.parseDouble(JOptionPane.showInputDialog("Informe quanto deseja sacar"));
	}

	public static void exibirSaldo(double saldo) {
		JOptionPane.showMessageDialog(null, "Saldo da Conta: " + saldo, "Saldo", JOptionPane.INFORMATION_MESSAGE);
	}

	public static void exibirDadosDaConta(String titularDaConta, String tipoConta, double saldo) {

		JOptionPane.showMessageDialog(null,
				"Titular da Conta: " + titularDaConta + "\n Tipo de Conta: " + tipoConta + "\n Saldo: " + saldo,
				"Dados da Conta", JOptionPane.INFORMATION_MESSAGE);
	}

	public static void exibirExtratoCompleto(String titularDaConta, String tipoConta, String dataDeMovimentacao) {
		JOptionPane.showMessageDialog(null,
				"Titular da Conta: " + titularDaConta + "\n Tipo de Conta: " + tipoConta
						+ "\n ========================= " + dataDeMovimentacao + "\n ========================= ",
				"Extrato", JOptionPane.INFORMATION_MESSAGE);
	}

	public static void exibirExtratoDeDepositos() {

	}

	public static void exibirExtratoDeSaques() {

	}
}
