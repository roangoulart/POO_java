	public static double depositar(double saldo, double depositar, String tipoMovimentacao, String deposito) {
		tipoMovimentacao = deposito;
		saldo = depositar + saldo;
		return saldo;
	}

	public static void sacar(double saldo, double sacar, String tipoMovimentacao, String saque) {
		tipoMovimentacao = saque;
		saldo = sacar - saldo;
	}

