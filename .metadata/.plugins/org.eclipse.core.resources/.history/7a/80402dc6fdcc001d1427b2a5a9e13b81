package modelo;

import java.util.ArrayList;
import javax.swing.JOptionPane;
import modelo.Conta;

public class Conta {

	private String titularDaConta;
	private int tipo;
	private double saldo;
	private int saque;
	private int deposito;
	ArrayList<Movimentacao> listaDeMovimentacao = new ArrayList<>();
	private Conta conta = new Conta();

	private int getDeposito() {
		return deposito;
	}

	private void setDeposito(int deposito) {
		this.deposito = deposito;
	}

	private int getSaque() {
		return saque;
	}

	private void setSaque(int saque) {
		this.saque = saque;
	}

	private double getSaldo() {
		return saldo;
	}

	private void setSaldo(double saldo) {
		this.saldo = saldo;
	}

	public static void depositar() {

	}

	public void exibirSaldo() {
		JOptionPane.showMessageDialog(null, "Seu saldo é " + getSaldo(), "Saldo", JOptionPane.INFORMATION_MESSAGE);
	}

	public static void exibirDadosDaConta(String titularDaConta, int tipo, double saldo) {

		JOptionPane.showMessageDialog(null,
				"Titular da Conta: " + titularDaConta + "\n Tipo de Conta: " + tipo + "\n Saldo: " + saldo,
				"Dados da Conta", JOptionPane.INFORMATION_MESSAGE);
	}

}
