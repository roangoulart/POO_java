	public static double depositar(double saldo, double depositar) {
		saldo = depositar + saldo;
		return saldo;
	}

	public static double sacar(double saldo, double saque) {
		if (saldo <= -1000) {
			JOptionPane.showMessageDialog(null, "Limite negativo atingido", "Erro", JOptionPane.WARNING_MESSAGE);
		} else {
			saldo = saque - saldo;
		}
		return saldo;
	}

