package controle;

import visualizacao.EntradaSaida;
import modelo.Conta;

public class Controladora {

	private Conta conta = new Conta();
	

	public static void exibeMenu() {
		
		int opcao;
		double saldo;
		int tipo;
		String titularDaConta;
		String dadosDaConta;
		
		do {
			opcao = EntradaSaida.solicitaOpcao();
			
			switch (opcao) {
				case 0:
					int depositar = EntradaSaida.solicitarInformacoesDeposito();
		
					saldo = depositar + saldo;
					break;
					
				case 1:
					int saque = EntradaSaida.solicitarInformacoesSaque();
					
					saldo = saque - saldo;
					break;
					
				case 2:
					EntradaSaida.exibirSaldo(saldo);
					
					break;
					
				/*case 3:
					
					EntradaSaida.exibirDadosDaConta(titularDaConta, tipo, saldo);
				break;
				case 4:
					
					break;
				case 5:
					
					break;
				case 6:
					
					break;
			}*/
		}
	}
}
