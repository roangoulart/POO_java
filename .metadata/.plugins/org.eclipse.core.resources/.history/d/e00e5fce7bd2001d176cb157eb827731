package modelo;

import java.util.ArrayList;

public class Conta {

	private String titularDaConta;
	private int tipo;
	private double saldo = 0;
	private ArrayList<Movimentacao> listaMovimentacoes;
	private String data;
	private String tipoConta;
	private String tipoMovimentacao;

	public static double depositar(double saldo, double depositar) {
		tipoMovimentacao = deposito;
		saldo = depositar + saldo;
		return saldo;
	}

	public static double sacar(double saldo, double saque) {
		saldo = saque - saldo;
		return saldo;
	}

	public String getTitularDaConta() {
		return titularDaConta;
	}

	public void setTitularDaConta(String titularDaConta) {
		this.titularDaConta = titularDaConta;
	}

	public String getData() {
		return data;
	}

	public void serData(String data) {
		this.data = data;
	}

	public void gerarExtrato(String titularDaConta, String tipo, String data) {
		Movimentacao movimentacao = new Movimentacao();
		movimentacao.setTitularDaConta(titularDaConta);
		movimentacao.setTipoConta(tipoConta);
		movimentacao.listaMovimentacoes.add(movimentacao);

	}

	private void gerarExtratoDepositos() {

	}

	private void gerarExtratoSaques() {

	}

}
