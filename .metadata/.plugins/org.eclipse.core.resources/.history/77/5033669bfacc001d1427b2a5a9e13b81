package controle;

import visualizacao.EntradaSaida;
import modelo.Conta;

public class Controladora {

	private Conta conta = new Conta();

	public static void exibeMenu() {
		
		int opcao;
		double saldo
		
		do {
			opcao = EntradaSaida.solicitaOpcao();
			
			swtich (opcao) {
				case 0:
					int depositar = EntradaSaida.solicitarInformacoesDeposito();
		
					saldo = depositar + saldo;
					break;
					
				case 1:
					int saque = EntradaSaida.solicitarInformacoesSaque();
					
					saldo = saque - saldo;
					break;
					
				case 2:
					conta.getSaldo(EntradaSaida.exibirSaldo());
					
					break;
					
				case 3:
					
					conta.exibirDadosDaConta
				
			}
		}
	}

}
